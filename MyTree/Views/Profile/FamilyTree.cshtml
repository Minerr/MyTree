@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model MyTree.Models.Gender

@{
	ViewData["Title"] = "Adjust Family Tree";
}

@section Stylesheets {
	<style>

		/* Edit or Add Family member - Modal */
		#addPersonModal .modal-content {
			width: 450px;
			height: 500px;
		}

		#addPersonModal .modal-header {
			height: 150px;
		}

		.btn-modal {
			width: 6rem;
			margin-left: 0.5rem;
		}


		/* Family Tree Container */
		#familyTreeContainer {
			min-height: 600px;
			/*overflow: scroll;*/
			user-select: none;
		}

		.family-member {
			width: 180px;
			max-height: 200px;
			margin: 10px;
		}

		.family-member-top {
			height: 135px;
		}

		.family-member-body {
			background-color: #e3e8ea;
			overflow: hidden;
			text-align: center;
		}
	</style>
}

@section Scripts {
	<script src="~/js/editFamilyTree.js"></script>
}

<partial name="_SettingsNavbar.cshtml" />


<div class="container">

	<div class="d-flex justify-content-center">
		<h1 class="text-center mt-2 mr-3">Adjust family tree</h1>
		<button type="button" class="btn-icon-primary btn btn-link m-0 p-0" data-toggle="modal" data-target="#addPersonModal" data-backdrop="static">
			<i class="fas fa-plus-circle icon"></i>
		</button>
	</div>
	<div id="familyTreeContainer" class="d-flex flex-wrap">

		<!-- Body for list of people in the family -->

	</div>
</div>

<div class="fixed-bottom">
	<div class="container d-flex justify-content-end ">

		<a asp-controller="Profile" asp-action="Index" class="btn btn-primary mb-5">
			Go back
		</a>
	</div>

</div>

<!-- Modal -->
<div class="modal fade" id="addPersonModal" tabindex="-1" role="dialog" aria-labelledby="addPersonModal" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered" role="document">
		<div class="modal-content">


			<div class="modal-header d-flex justify-content-around align-items-center">
				<button type="button" class="btn-icon btn btn-link"  onclick="SetPersonGender('@Gender.Female.ToString()')">
					<i class="fas fa-venus icon-medium"></i>
				</button>

				<img class="icon-huge rounded-circle" src="~/images/UserIcon_default.png">
				
				<button type="button" class="btn-icon btn btn-link" onclick="SetPersonGender('@Gender.Male.ToString()')">
					<i class="fas fa-mars icon-medium"></i>
				</button>
			</div>
			<div class="modal-body">
				<div class="text-danger"></div>

				<div class="container p-0 pl-2 mr-0 mb-5">
					<div class="row mb-3">
						<div class="col col-3 d-flex align-items-center">
							<label class="control-label">First name</label>
						</div>
						<div class="col form-group">
							<input type="text" id="inputFirstName" class="form-control" placeholder="First name" />
							<span class="field-validation-error text-danger"></span>
						</div>
					</div>
					<div class="row mb-3">
						<div class="col col-3 d-flex align-items-center">
							<label class="control-label">Last name</label>
						</div>
						<div class="col form-group">
							<input type="text" id="inputLastName" class="form-control" placeholder="Last name" />
							<span class="field-validation-error text-danger"></span>
						</div>
					</div>
				</div>

				<div class="d-flex justify-content-end align-self-end">
					<button type="button" class="btn-modal btn btn-primary" onclick="PersistPerson()">Save</button>
					@*<button type="button" class="btn-modal btn btn-danger">Delete</button>*@
					<button type="button" class="btn-modal btn btn-outline-dark" data-dismiss="modal">Cancel</button>
				</div>
			</div>
		</div>
	</div>
</div>