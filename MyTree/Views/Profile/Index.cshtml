
@{
    ViewData["Title"] = "Profile Home Page";
}

@section Stylesheets {
	<style>

		body {
			background-color: #BFD3DE;
		}

		.profile-information {
			background-color: #DBF3FF;
		}

		.btn-large {
			margin-top: -40px;
			width: 500px;
		}

		.nav-footer .nav-link {
			font-size: 1.3rem;
			font-weight: bold;
			padding: 0 0 5px 5px;
			color: #666A6B;
		}

		.nav-footer .nav-link:hover {
			color: #343a40;
		}

	</style>
}


<div class="profile-information text-center text-dark p-3">
	<h1>Welcome back.</h1>
	<img src="~/images/UserIcon_default.png" class="profile-icon-large rounded-circle m-3"/>
	<h2 class="pb-5">Profile Name</h2>
</div>


<div class="d-flex justify-content-center" >
	<button class="btn-large btn btn-primary btn-block">Ready to start?</button>
</div>

<div class="nav-footer container d-flex pt-5">
	<div class="col">
		<h2 class="text-white">Profile options</h2>
		<nav class="nav flex-column">
			<a asp-controller="Profile" asp-action="Settings" class="nav-link">Edit settings</a>
			<a asp-controller="Profile" asp-action="FamilyTree" class="nav-link">Adjust family tree</a>
			<a asp-controller="Profile" asp-action="Statistics" class="nav-link">Show statistics</a>
		</nav>
	</div>
	<div class="col-5">
		<h2 class="text-white">Help guides</h2>
		<nav class="nav flex-column">
			<a asp-controller="Help" asp-action="Guides" class="nav-link">How do I play?</a>
			<a asp-controller="Help" asp-action="Guides" class="nav-link">How do I change my family tree?</a>
			<a asp-controller="Help" asp-action="Guides" class="nav-link">How do my family/doctor gain access?</a>
		</nav>
	</div>
	<div class="col">
		<h2 class="text-white">Profile options</h2>
		<nav class="nav flex-column">
			<a asp-controller="Help" asp-action="Support" class="nav-link">Support chat</a>
			<a asp-controller="Help" asp-action="Contact" class="nav-link">Contact Us</a>
		</nav>
	</div>
</div>