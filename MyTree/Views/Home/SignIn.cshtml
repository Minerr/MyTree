
@{
	ViewData["Title"] = "Sign in";
}

@section Stylesheets {
	<style>
		body {
			background-color: #DBF3FF;
		}

		.navbar {
			margin-bottom: 30px;
		}

		.sign-in {
			width: 500px;
			padding: 50px;
		}

		.divider {
			height: 3px;
			background-color: #7B8D93;
			margin: 20px 0px;
			overflow: hidden;
		}

		.divider-space {
			height: 40px;
			width: 50px;
			background-color: white;
			margin-left: 43%;
			margin-left: calc(50% - 25px);
			text-align: center;
			padding: 5px 0 0 0;
			color: #7B8D93;
			font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
			font-weight: bold;
			font-size: 1.1rem;
		}

	</style>
}

<div class="container d-flex justify-content-center">
	<div class="sign-in card">
		<form asp-controller="Profile" asp-action="Index" >
			<div class="form-group">
				<input type="text" name="username" class="form-control" placeholder="Username" />
			</div>
			<div class="form-group">
				<input type="password" name="password" class="form-control" placeholder="Password" />
			</div>
			<button type="submit" class="btn btn-primary btn-block">Sign in</button>
		</form>

		<div class="card border-0  align-items-center">
			<img class="divider card-img" />
			<div class="divider-space card-img-overlay">or</div>
		</div>

		<button type="button" class="btn btn-secondary btn-block">Not a user? Register here</button>
	</div>
</div>
