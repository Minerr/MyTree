<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - MyTree</title>

	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
	<link rel="stylesheet" href="~/css/site.css" />
	@RenderSection("Stylesheets", required: false)
</head>

<body>
	<nav class="navbar navbar-fixed-top">
		<div class="container">
			<a asp-controller="Home" asp-action="Index" class="navbar-brand">
				<img src="~/images/icon_logo.png" id="logo" class="img-fluid rounded-circle" />
				MyTree
			</a>
			<div class="d-flex">
				<a asp-controller="Home" asp-action="Index" class="nav-link">Pricing</a>
				<a asp-controller="Home" asp-action="Contact" class="nav-link">Contact</a>
				<a asp-controller="Home" asp-action="Index" class="nav-link">
					Sign in
					<img src="~/images/UserIcon_default.png" id="icon" class="img-fluid rounded-circle" />
				</a>
			</div>
		</div>
	</nav>

	<partial name="_CookieConsentPartial" />

	<div class="container-fluid body-content px-0">
		@RenderBody()
	</div>

	<script src="~/lib/jquery/dist/jquery.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	@RenderSection("Scripts", required: false)

</body>
</html>
